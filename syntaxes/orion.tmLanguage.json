{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Orion",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.orion",
					"match": "//.*$"
				},
				{
					"name": "comment.block.orion",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.orion",
					"match": "\\b(class|fun|var|if|elseif|else|while|for|break|continue|return|or|and|super)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.orion",
					"match": "\\b(true|false|nil)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.language.orion",
					"match": "\\b(true|false|nil)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.orion",
					"match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%|=|!|\\.|,|:|;)"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.orion",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.orion",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.orion",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.orion",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.orion"
}